{
  "ci": {
    "collect": {
      "url": [
        "http://localhost:3000/zh/articles/when-to-seek-medical-care-comprehensive-guide",
        "http://localhost:3000/en/articles/when-to-seek-medical-care-comprehensive-guide"
      ],
      "numberOfRuns": 3,
      "settings": {
        "onlyCategories": ["accessibility", "best-practices"],
        "skipAudits": ["uses-http2"],
        "chromeFlags": ["--no-sandbox", "--disable-dev-shm-usage"]
      }
    },
    "assert": {
      "assertions": {
        "categories:accessibility": ["error", { "minScore": 0.9 }],
        "categories:best-practices": ["error", { "minScore": 0.8 }]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": "./lighthouse-reports"
    }
  }
}
