# 生产环境配置模板
# Day 5: 生产环境准备和部署

# 基础环境配置
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# 应用配置
NEXT_PUBLIC_APP_NAME=PeriodHub Health
NEXT_PUBLIC_APP_DESCRIPTION=Comprehensive Women's Health Platform
NEXT_PUBLIC_APP_URL=https://yourdomain.com

# 版本信息
NEXT_PUBLIC_APP_VERSION=0.1.0
NEXT_PUBLIC_BUILD_DATE=2025-11-10
NEXT_PUBLIC_BUILD_COMMIT=main

# 性能监控
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here
NEXT_PUBLIC_VERCEL_ANALYTICS=true
NEXT_PUBLIC_WEB_VITALS_REPORTING_ENDPOINT=/api/vitals

# A/B测试配置
NEXT_PUBLIC_AB_TEST_ENABLED=true
NEXT_PUBLIC_AB_TEST_SAMPLE_RATE=1.0

# 用户反馈配置
NEXT_PUBLIC_FEEDBACK_ENABLED=true
NEXT_PUBLIC_FEEDBACK_SAMPLE_RATE=0.1

# 国际化配置
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_SUPPORTED_LOCALES=en,zh

# 缓存配置
NEXT_PUBLIC_CACHE_TTL=31536000
NEXT_PUBLIC_ENABLE_SW=true

# 安全配置
NEXT_PUBLIC_CSP_REPORT_URI=/api/csp-report
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true

# 开发调试 (生产环境应设为false)
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_SHOW_PERFORMANCE_METRICS=false

# SEO配置
NEXT_PUBLIC_ROBOTS_ALLOW=true
NEXT_PUBLIC_SITEMAP_URL=https://yourdomain.com/sitemap.xml

# 分析配置 (生产环境配置)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# 错误追踪
NEXT_PUBLIC_ERROR_REPORTING=true
NEXT_PUBLIC_ERROR_REPORTING_RATE=0.1

# 特性标志
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=false

# 第三方服务
NEXT_PUBLIC_CDN_URL=https://cdn.yourdomain.com
NEXT_PUBLIC_API_BASE_URL=https://api.yourdomain.com

# 国际化特定配置
NEXT_PUBLIC_LOCALE_DETECTION=true
NEXT_PUBLIC_FALLBACK_LOCALE=en

# 性能优化
NEXT_PUBLIC_IMAGE_OPTIMIZATION=true
NEXT_PUBLIC_LAZY_LOADING=true
NEXT_PUBLIC_CODE_SPLITTING=true

# 缓存策略
NEXT_PUBLIC_STATIC_CACHE_MAX_AGE=31536000
NEXT_PUBLIC_DYNAMIC_CACHE_MAX_AGE=3600
